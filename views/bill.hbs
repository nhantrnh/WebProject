    <div class="container-fluid" style="font-family:'Newsreader', serif;">
        {{#each cart}}
            <div class="card m-1">
                <div class="d-flex mt-1 " style="height:120px">
                    <div class="col-5">
                        <img src=" {{this.image}}" class=" product-image "
                            style="width: 100%; height: 100%; object-fit: contain;" alt="...">
                    </div>
                    <div class="col-5 ">
                        <div class="text-start pt-2 d-flex">
                            <h5 class="product-name">
                                {{this.name}}
                            </h5>
                        </div>
                        <div class=" text-start pt-3">
                            <button class="btn btn-primary" id="plus">+</button>

                            <input type="text" class="count " style="width:35px;height:35px" value="{{this.count}}" disabled>
                            </input>
                            <button class="btn btn-primary" id="minus">-</button>

                        </div>
                    </div>
                    <div class="col-2">
                        <div class="pt-1 close">X</div>
                        <div class="product-price pt-5 fw-bolder"> {{this.price}} vnd</div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
  